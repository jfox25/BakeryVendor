@{
  Layout = "_Layout";
}
@using BakeryVendor.Models

<h1 class="title">@Model.Title</h1>
<div class="description">
  <p><a href="/vendors/@Model.Vendor.Id">Vendor: @Model.Vendor.Name</a></p>
  <p>Order Title: <span class="bold">@Model.Title</span></p>
  <p>Order Cost: <span class="money">$@Model.Cost</span></p>
  <p>Date Created: <span class="bold">@Model.DateCreated</span></p>
  @if(@Model.IsPaid)
  {
    <p>Payment Status: Paid</p>
  }
  else 
  {
    <p class="inline-para">Payment Status : 
      <form class="updateForm" action="/orders/update/@Model.Id" method="post">
        <button class="payment-button" type="submit">Mark as Paid</button>
      </form>
    </p>
  }
</div>
<div class="button-group">
  <a class="button" href="/orders">View All Orders</a>
  <a class="button-home" href="/vendors">Vendors</a>
</div>

