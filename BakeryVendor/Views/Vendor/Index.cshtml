@{
  Layout = "_Layout";
}
@using BakeryVendor.Models;

<h1>Vendors</h1>
@if(@Model.Count == 0)
{
  <p>There are no Vendors Yet</p>
}
<ul>
  @foreach (Vendor vendor in @Model)
  {
    <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
  }
</ul>
<div class="button-group">
  <a class="button" href="/vendors/new">Add a Vendor</a>
  <a class="button-home" href="/">Home</a>
</div>